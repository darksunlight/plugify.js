{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/types",
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "ESNext"
        ],
        "typeRoots": [
          "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [ "./src/**/*.ts" ],
    "exclude": [
        "*.test.ts",
        "dist/**",
        "examples/**"
    ]
}